<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 月亮主体 -->
    <item
        android:top="10%"
        android:right="10%">
        <shape android:shape="oval">
            <size
                android:width="70dp"
                android:height="70dp" />
            <solid android:color="#FFFDD0" />
            <!-- 轻微的光晕效果 -->
            <stroke android:color="#33FFFFFF" android:width="4dp" />
        </shape>
    </item>

    <!-- 月牙遮挡部分 - 使用透明色以适应任何背景 -->
    <item
        android:top="8%"
        android:right="6%">
        <shape android:shape="oval">
            <size
                android:width="70dp"
                android:height="70dp" />
            <!-- 使用透明色而非固定背景色 -->
            <solid android:color="@android:color/transparent" />
            <gradient
                android:startColor="#FFBB86FC"
                android:endColor="#FF6200EE"
                android:angle="270" />
        </shape>
    </item>
</layer-list>
